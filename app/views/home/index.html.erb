<%= link_to "New Post", new_post_path %>

<ul>
    <% @posts.each do |post| %>
        <li><%= link_to post.title, post_path(post) %> - <%= link_to "Edit", edit_post_path(post) %> / <%= link_to "Delete", post_path(post), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></li>
    <% end %>
</ul>